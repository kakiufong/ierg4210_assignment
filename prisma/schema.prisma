generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  pid       Int       @id @default(autoincrement())
  cid       Int
  name      String    @db.VarChar(15)
  price     Float
  desc      String
  image     String
  inventory Int
  categorie Categorie @relation(fields: [cid], references: [cid])

  @@index([cid])
}

model Categorie {
  cid     Int       @id @default(autoincrement())
  name    String
  products Product[]
}
